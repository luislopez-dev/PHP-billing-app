{% extends 'Layout.html.twig' %}
{% block title %} new item {% endblock %}
{% block content %}

<form>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" value="{{ product.name }}">
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" value="{{ product.price }}">
    </div>
    <div class="mb-3">
        <label class="form-label">Image</label>
        <input type="file" class="form-control">
    </div>
    <div class="mb-3">
        <label>Initial stock</label>
        <select class="form-control">
            {% set k = 20 %}
            {% for i in range(1, k) %}
                <option selected="{{ product.stock }}">{{ i }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Brand</label>
        <input type="text" class="form-control" value="{{ product.brand }}">
    </div>
    <div class="mb-3">
        <label>Category</label>
        <select class="form-control">
            {% set categories = ["Electronics", "Food", "Drinks", "Bauty", "Furniture"] %}
            {% for category in categories %}
                <option>{{ category }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control">{{ product.description }}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

{% endblock %}